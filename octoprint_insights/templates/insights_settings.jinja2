<h4>{{ _('Insights Settings') }}</h4>

<form class="form-horizontal">
    <div class="control-group">
      <label class="control-label" for="settings-insights-account-id">{{ _('New Relic Account ID') }}</label>
      <div class="controls">
        <input type="text" class="input-block-level" data-bind="value: settings.plugins.insights.account_id">
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for=""settings-insights-api-inskey">{{ _('Insights Insert API Key') }}</label>
      <div class="controls">
        <input type="text" class="input-block-level" data-bind="value:settings.plugins.insights.api_inskey">
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="settings-insights-event-type">{{ _('Insights Event Type') }}</label>
      <div class="controls">
        <input type="text" class="input-block-level" data-bind="value:settings.plugins.insights.event_type">
      </div>
    </div>
</form>
